<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CreateActivityViewController">
  <children>
    <AnchorPane fx:id="anchorPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="profileName" layoutX="14.0" layoutY="369.0" text="Welcome ProfileName" />
            <Button fx:id="backButton" layoutX="585.0" layoutY="357.0" mnemonicParsing="false" onAction="#handleBackAction" text="Back" />
            <TextFlow layoutX="139.0" layoutY="66.0" prefHeight="68.0" prefWidth="363.0" textAlignment="CENTER">
               <children>
                  <TextField fx:id="descriptionTextField" alignment="TOP_LEFT" prefHeight="62.0" prefWidth="347.0" promptText="Description" />
               </children>
            </TextFlow>
            <TextField fx:id="nameTextField" layoutX="246.0" layoutY="23.0" promptText="Name" />
            <Button fx:id="doneButton" layoutX="22.0" layoutY="304.0" mnemonicParsing="false" onAction="#handleDoneAction" prefHeight="33.0" prefWidth="51.0" text="Done" />
            <ToggleButton fx:id="refreshToggleButton" layoutX="29.0" layoutY="153.0" mnemonicParsing="false" onAction="#handleRefreshToggleAction" prefHeight="33.0" prefWidth="89.0" text="Refresh" />
            <Pane fx:id="hiddenPane" disable="true" layoutX="121.0" layoutY="153.0" prefHeight="33.0" prefWidth="181.0">
               <children>
                  <Label layoutX="14.0" layoutY="8.0" text="Every" />
                  <ChoiceBox fx:id="choiceBox" layoutX="55.0" layoutY="4.0" prefHeight="25.0" prefWidth="41.0" />
                  <Label layoutX="104.0" layoutY="8.0" text="Day(s)" />
               </children>
            </Pane>
            <Pane fx:id="datePickerPane" disable="true" layoutX="133.0" layoutY="202.0" prefHeight="33.0" prefWidth="181.0">
               <children>
                  <DatePicker fx:id="datePicker" layoutX="4.0" layoutY="4.0" />
               </children>
            </Pane>
            <TextField fx:id="hoursTextField" layoutX="29.0" layoutY="250.0" prefHeight="33.0" prefWidth="89.0" promptText="Hours" />
            <Label layoutX="139.0" layoutY="258.0" text="Hours to complete" />
            <ToggleButton fx:id="dueDateToggleButton" layoutX="29.0" layoutY="202.0" mnemonicParsing="false" onAction="#handleToggleDueDateAction" prefHeight="33.0" prefWidth="89.0" text="Due Date" />
         </children>
    </AnchorPane>
  </children>
</VBox>
